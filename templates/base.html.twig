<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('/css/main.css') }}"> 
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </head>
    <body>
        {% block body %}
            {% block header %}
            <nav id="header" class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="{{url('twig_accueil')}}">Accueil</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{url('twig_articles')}}">Articles</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{url('twig_control')}}">Controles</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                BDD
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="{{url('app_admin_post_index')}}">Articles</a>
                                <a class="dropdown-item" href="{{url('app_admin_auteur_index')}}">Auteurs</a>
                                <a class="dropdown-item" href="{{url('app_admin_categorie_index')}}">Catégories</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            {% endblock %}

            {% block inner %}
            {% endblock %}

            {% block footer %}
                <div id ="footer">                
                    <p>Mentions légales</p>
                </div>
                <link rel="script" href="{{ asset('/js/main.js') }}">
                <script src="{{ asset('build/app.js') }}"></script> 
            {% endblock %}
        {% endblock %}
    </body>
</html>
